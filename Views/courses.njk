{% extends "layout.njk" %}

{% block content %}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
<link rel="stylesheet" href="cursos.css">
    
<title>Sobre - Rocketseat</title>

<body>
 
  <h3>“Você nunca sai perdendo quando ganha conhecimento!”</h3>

  <section class="cards">
    {% for item in items %}
      <div class="card" id="{{item.id}}">
          <div class="card_image_container {{ 'featured-wrapper' if item.featured}}">
            <img src="../Assets/starte.svg" alt="Imagem do {{item.title}}">
            {% if item.featured %}
              <div class="featured"></div>
            {% endif %}
          </div>
          <div class="card_content">
            <p>{{item.title}}</p>
          </div>
          <div class="card_info">
            <p>{{item.duration}}</p>
            <a href="https://rocketseat.com.br/{{item.id}}" class="card_price">{{item.price}}</a>
          </div>
      </div>
    {% endfor %}
  </section>
<script src="index.js"></script>
{% endblock %}
